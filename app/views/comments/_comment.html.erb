<div class="comment clearfix">
  <div class="cooment_content">
    <p class="comment_nome"><strong><%= comment.name %></strong></p>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago </p>
  </div>
  <% if user_signed_in? %>
    <p><%= link_to "Delete", [comment.post, comment], method: :delete, class: "button", data: {confirm: "Ara you sure?"} %></p>
  <% end %>
</div>
